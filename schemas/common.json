{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://setuav.com/schemas/common.json",
  "title": "Setuav Common Definitions",
  "definitions": {
    "position": {
      "type": "object",
      "properties": {
        "x": { "type": "number", "description": "mm, position along X-axis", "default": 0 },
        "y": { "type": "number", "description": "mm, position along Y-axis", "default": 0 },
        "z": { "type": "number", "description": "mm, position along Z-axis", "default": 0 }
      },
      "required": ["x"]
    },
    "rotation": {
      "type": "object",
      "properties": {
        "x": { "type": "number", "description": "deg, rotation around X-axis (roll)", "default": 0 },
        "y": { "type": "number", "description": "deg, rotation around Y-axis (pitch)", "default": 0 },
        "z": { "type": "number", "description": "deg, rotation around Z-axis (yaw)", "default": 0 }
      }
    },
    "tag": {
      "type": "string",
      "description": "Unique identifier for the component"
    },
    "mass": {
      "type": "number",
      "minimum": 0,
      "description": "Mass in grams"
    },
    "placement": {
      "type": "object",
      "properties": {
        "position": { "$ref": "#/definitions/position" },
        "rotation": { "$ref": "#/definitions/rotation" }
      }
    }
  }
}