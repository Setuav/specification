{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://setuav.com/schemas/propulsion/battery.json",
    "title": "Battery Schema",
    "type": "object",
    "properties": {
        "tag": {
            "$ref": "../common.json#/definitions/tag"
        },
        "type": {
            "const": "battery"
        },
        "manufacturer": {
            "type": "string"
        },
        "model": {
            "type": "string"
        },
        "chemistry": {
            "enum": [
                "LiPo",
                "LiHV",
                "LiFe",
                "Li-ion",
                "NiMH",
                "NiCd"
            ]
        },
        "cells_series": {
            "type": "integer",
            "minimum": 1
        },
        "cells_parallel": {
            "type": "integer",
            "minimum": 1
        },
        "cell_voltage_nominal": {
            "type": "number",
            "minimum": 0
        },
        "cell_voltage_full": {
            "type": "number",
            "minimum": 0
        },
        "cell_voltage_cutoff": {
            "type": "number",
            "minimum": 0
        },
        "cell_capacity": {
            "type": "number",
            "minimum": 0
        },
        "cell_discharge_rate": {
            "type": "number",
            "minimum": 0
        },
        "cell_discharge_burst": {
            "type": "number",
            "minimum": 0
        },
        "cell_charge_rate": {
            "type": "number",
            "minimum": 0,
            "default": 1
        },
        "cell_resistance": {
            "type": "number",
            "minimum": 0
        },
        "mass": {
            "$ref": "../common.json#/definitions/mass"
        },
        "dimensions": {
            "type": "object",
            "properties": {
                "length": {
                    "type": "number",
                    "minimum": 0
                },
                "width": {
                    "type": "number",
                    "minimum": 0
                },
                "height": {
                    "type": "number",
                    "minimum": 0
                }
            },
            "required": [
                "length",
                "width",
                "height"
            ]
        },
        "placement": {
            "$ref": "../common.json#/definitions/placement"
        }
    },
    "required": [
        "tag",
        "chemistry",
        "cells_series",
        "cells_parallel",
        "cell_voltage_nominal",
        "cell_voltage_full",
        "cell_voltage_cutoff",
        "cell_capacity",
        "cell_discharge_rate",
        "mass",
        "dimensions"
    ]
}
