{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://setuav.com/schemas/design.json",
    "title": "Setuav Design Schema",
    "type": "object",
    "properties": {
        "setuav": {
            "type": "string",
            "enum": [
                "1.0"
            ]
        },
        "airframe": {
            "type": "object",
            "properties": {
                "fuselage": {
                    "$ref": "https://setuav.com/schemas/geometry/fuselage.json"
                },
                "mass": {
                    "$ref": "https://setuav.com/schemas/common.json#/definitions/mass"
                },
                "wings": {
                    "type": "array",
                    "items": {
                        "allOf": [
                            {
                                "$ref": "https://setuav.com/schemas/geometry/wing.json"
                            },
                            {
                                "type": "object",
                                "properties": {
                                    "attachment": {
                                        "$ref": "https://setuav.com/schemas/geometry/wing_attachment.json"
                                    }
                                },
                                "required": [
                                    "attachment"
                                ]
                            }
                        ]
                    }
                }
            }
        },
        "propulsion": {
            "type": "object",
            "properties": {
                "motors": {
                    "type": "array",
                    "items": {
                        "$ref": "https://setuav.com/schemas/propulsion/motor.json"
                    }
                },
                "escs": {
                    "type": "array",
                    "items": {
                        "$ref": "https://setuav.com/schemas/propulsion/esc.json"
                    }
                },
                "batteries": {
                    "type": "array",
                    "items": {
                        "$ref": "https://setuav.com/schemas/propulsion/battery.json"
                    }
                },
                "propellers": {
                    "type": "array",
                    "items": {
                        "$ref": "https://setuav.com/schemas/propulsion/propeller.json"
                    }
                }
            }
        },
        "additional_parts": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "tag": {
                        "$ref": "https://setuav.com/schemas/common.json#/definitions/tag"
                    },
                    "description": {
                        "type": "string"
                    },
                    "mass": {
                        "$ref": "https://setuav.com/schemas/common.json#/definitions/mass"
                    },
                    "placement": {
                        "$ref": "https://setuav.com/schemas/common.json#/definitions/placement"
                    }
                },
                "required": [
                    "tag",
                    "mass"
                ]
            }
        }
    },
    "required": [
        "setuav",
        "airframe"
    ]
}
