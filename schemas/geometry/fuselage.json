{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://setuav.com/schemas/geometry/fuselage.json",
    "title": "Fuselage Geometry Schema",
    "type": "object",
    "properties": {
        "tag": {
            "$ref": "../common.json#/definitions/tag"
        },
        "mass": {
            "$ref": "../common.json#/definitions/mass"
        },
        "type": {
            "const": "fuselage"
        },
        "geometry": {
            "type": "object",
            "properties": {
                "blending": {
                    "type": "object",
                    "properties": {
                        "ruled": {
                            "type": "boolean",
                            "default": false
                        },
                        "max_degree": {
                            "type": "integer",
                            "minimum": 1,
                            "maximum": 8,
                            "default": 3
                        },
                        "continuity": {
                            "enum": [
                                "G0",
                                "G1",
                                "G2"
                            ],
                            "default": "G2"
                        }
                    }
                },
                "sections": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "position": {
                                "$ref": "../common.json#/definitions/position"
                            },
                            "profile": {
                                "type": "object",
                                "properties": {
                                    "type": {
                                        "enum": [
                                            "circle",
                                            "ellipse",
                                            "rectangle"
                                        ]
                                    },
                                    "diameter": {
                                        "type": "number",
                                        "minimum": 0
                                    },
                                    "width": {
                                        "type": "number",
                                        "minimum": 0
                                    },
                                    "height": {
                                        "type": "number",
                                        "minimum": 0
                                    },
                                    "corner_radius": {
                                        "type": "number",
                                        "minimum": 0,
                                        "default": 0
                                    }
                                },
                                "required": [
                                    "type"
                                ],
                                "allOf": [
                                    {
                                        "if": {
                                            "properties": {
                                                "type": {
                                                    "const": "circle"
                                                }
                                            }
                                        },
                                        "then": {
                                            "required": [
                                                "diameter"
                                            ]
                                        }
                                    },
                                    {
                                        "if": {
                                            "properties": {
                                                "type": {
                                                    "const": "ellipse"
                                                }
                                            }
                                        },
                                        "then": {
                                            "required": [
                                                "width",
                                                "height"
                                            ]
                                        }
                                    },
                                    {
                                        "if": {
                                            "properties": {
                                                "type": {
                                                    "const": "rectangle"
                                                }
                                            }
                                        },
                                        "then": {
                                            "required": [
                                                "width",
                                                "height"
                                            ]
                                        }
                                    }
                                ]
                            },
                            "pitch": {
                                "type": "number",
                                "default": 0
                            },
                            "roll": {
                                "type": "number",
                                "default": 0
                            }
                        },
                        "required": [
                            "position",
                            "profile"
                        ]
                    },
                    "minItems": 2
                }
            },
            "required": [
                "sections"
            ]
        }
    },
    "required": [
        "tag",
        "type",
        "geometry"
    ]
}