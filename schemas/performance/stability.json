{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://setuav.com/schemas/performance/stability.json",
    "title": "Stability Performance Schema",
    "type": "object",
    "properties": {
        "neutral_point_x": {
            "type": "number",
            "description": "Neutral point position in X axis (mm)"
        },
        "static_margin": {
            "type": "number",
            "description": "Static margin percentage (%)"
        },
        "trim_alpha": {
            "type": "number",
            "description": "Trim angle of attack (degrees)"
        },
        "trim_elevator": {
            "type": "number",
            "description": "Trim elevator deflection (degrees)"
        },
        "derivatives": {
            "type": "object",
            "properties": {
                "cm_alpha": {
                    "type": "number",
                    "description": "Change in pitching moment with alpha"
                },
                "cl_alpha": {
                    "type": "number",
                    "description": "Change in lift coefficient with alpha"
                },
                "cn_beta": {
                    "type": "number",
                    "description": "Change in yawing moment with beta (directional)"
                },
                "cl_beta": {
                    "type": "number",
                    "description": "Change in rolling moment with beta (lateral)"
                },
                "cy_beta": {
                    "type": "number",
                    "description": "Change in side force with beta"
                }
            }
        }
    }
}